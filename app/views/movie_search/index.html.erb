
<% require 'i18n' %>
<div class="content">
  <h1> <%= @actor.titleize %>'s <%=@type.capitalize %> Movies </h1>
  <% @movies.each do |movie| %>
  <div class="padded">
    <div class="grid-container">
      <div class="">
          <img class="poster" src="<%=movie.poster %>" alt="movie poster">
      </div>
      <div class="">
          <h2><%=movie.title %> (<%=movie.year %> <%=movie.rated %>)</h2>
          <p><%=movie.genre %></p>
          <p>Directed by <%=movie.director_list %></p>
          <p class="oneline">Staring 
          <% movie.actors.each do |actor| %>
            <%= button_to actor.name, "/movie_search?search_type=best&search=#{I18n.transliterate(actor.name)}", method: :post, class: "actor-link"%> 
          <% end %>
          </p>
          <table class="ratings">
            <tr>
              <th>IMDB</th>
              <th>Rotten</th>
              <th>Meta</th>
            </tr>
            <tr>
              <td><%=movie.imdb %></td>
              <td><%=movie.rotten %></td>
              <td><%=movie.metacritic %></td>
            </tr>
          </table>
          <p class="ital"><%=movie.description %></p>
      </div>
      <div class="">
          <iframe width="550" height="300" src="https://www.youtube.com/embed/<%=movie.trailer %>" allowfullscreen="allowfulllscreen"></iframe>
      </div>
    </div>
  </div>
  <% end %>

  <%= button_to "next page", "/movie_search?p=2&search=#{@actor}&search_type=#{@type}", method: :post, class: "btn"%>
</div>