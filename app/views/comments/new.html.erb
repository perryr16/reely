<div class="content">

  <%= form_tag(comments_path(@movie.id), method: :post) do %>
          <%= label_tag "Avatar" %>
          <%= text_field_tag :image_url %>
          <%= label_tag "Comment" %>
          <%= text_field_tag :comment %>

          <%= submit_tag 'Submit', id: "comment_button"%>
        <% end %>
</div>